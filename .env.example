# Calls Summary - Environment Configuration
# Copy this file to .env and fill in your values

# App
ENVIRONMENT=production
DEBUG=false

# Database (overridden by docker-compose for containers)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/calls_summery

# Redis (overridden by docker-compose for containers)
REDIS_URL=redis://localhost:6379/0

# AWS S3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=eu-north-1
S3_BUCKET_NAME=your-bucket-name

# Deepgram (transcription)
DEEPGRAM_API_KEY=your-deepgram-key

# Anthropic (summarization)
ANTHROPIC_API_KEY=your-anthropic-key

# SendGrid (email notifications)
SENDGRID_API_KEY=your-sendgrid-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Twilio (WhatsApp notifications - optional)
# TWILIO_ACCOUNT_SID=your-twilio-sid
# TWILIO_AUTH_TOKEN=your-twilio-token
# TWILIO_WHATSAPP_NUMBER=+14155238886

# Security (REQUIRED: generate with `python -c "import secrets; print(secrets.token_urlsafe(32))"`)
SECRET_KEY=change-this-to-a-random-string-at-least-32-chars

# CORS (comma-separated origins, or * for all)
ALLOWED_ORIGINS=*

# Frontend URL (for email verification links)
FRONTEND_URL=http://your-ec2-ip:8501

# Local agent settings (for phone/PC watcher)
# WATCH_FOLDER=/path/to/recordings
# API_ENDPOINT=http://your-ec2-ip:8001/api/webhooks/s3-upload
# API_KEY=your-api-key-from-the-app
